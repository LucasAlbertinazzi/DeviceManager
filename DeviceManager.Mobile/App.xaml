<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="DeviceManager.Mobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DeviceManager.Mobile"
    xmlns:uteis="clr-namespace:DeviceManager.Mobile.Uteis">

    <Application.Resources>
        <ResourceDictionary>

            <!--  Conversores e recursos locais  -->
            <uteis:BoolToColorConverter x:Key="BoolToColorConverter" />
            <uteis:BoolToStatusIconConverter x:Key="BoolToStatusIconConverter" />

            <!--  Estilos e cores  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
